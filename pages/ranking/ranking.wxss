page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-button {
  padding: 8rpx 24rpx;
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.ranking-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.ranking-list {
  width: 100%;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.rank-number {
  width: 60rpx;
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.ranking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.item-date {
  font-size: 24rpx;
  color: #666;
}

.item-votes {
  color: #07c160;
  font-weight: bold;
  font-size: 28rpx;
} 