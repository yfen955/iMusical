page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-button {
  padding: 8rpx 24rpx;
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.vote-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.vote-list {
  width: 100%;
}

.vote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.musical-info {
  flex: 1;
}

.musical-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.musical-date {
  font-size: 24rpx;
  color: #666;
}

.vote-button {
  padding: 20rpx 40rpx;
  background: #e64340;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.item-info {
  flex: 1;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
  font-weight: bold;
}

.item-status {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.item-details {
  margin: 10rpx 0;
}

.item-date {
  font-size: 26rpx;
  color: #666;
}

.item-votes {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.vote-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.rank-number {
  width: 60rpx;
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.ranking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ranking-item .item-name {
  margin-bottom: 6rpx;
}

.ranking-item .item-date {
  font-size: 24rpx;
}

.ranking-item .item-votes {
  color: #07c160;
  font-weight: bold;
} 